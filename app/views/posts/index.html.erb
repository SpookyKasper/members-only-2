<% unless user_signed_in? %>
  <%= button_to 'Sign in', new_user_session_path %>
<% end %>


<h1>All Posts</h1>


<% @posts.each do |post| %>
  <% if user_signed_in? %>
    <%= post.user.username %> <br>
  <% else %>
   <%= '*Sign in to see author*' %> <br>
  <% end %>
  <%=  post.title %> <br>
  <%= post.message %> <br>
  <br>
<% end %>


